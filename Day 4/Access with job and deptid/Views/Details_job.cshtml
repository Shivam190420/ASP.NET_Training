@model IEnumerable<WebApplication1.Models.Employee>

@{
    ViewData["Title"] = "Details_job";
}

<h1>Details_job</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
